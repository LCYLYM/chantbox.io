$bg1 = #3AABEA

html
body
  padding 0
  margin 0
  font-family "Varela Round", Helvetica, Arial, sans-serif
  font-size 16px
  background #fafafa
  height 100%

#head
  background $bg1
  padding 3% 0
  .logo
    color #fff
    font-family "Varela Round", Helvetica, Arial, sans-serif
    font-size 1.6em

footer
  text-align center
  color #aaa
  padding 10px
  p 
    display inline-block
    margin-left 10px
    border-left 1px solid #ddd
    padding-left 10px
    &:nth-child(1)
      border 0
      padding 0
      margin 0


#intro
  background $bg1
  text-align center
  height 60%

  div
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    padding 1.5em 0
    color #f1f1f1
    font-size 1.4em
    font-weight 300

  input[type=text]
    border 0
    font-size 16pt
    padding 10px 10px
    margin-right 10px

  input[type=submit]
    background darken($bg1, 30%)
    border-radius 5px
    border 0
    color #fff
    margin-top -10px
    font-size 14pt
    padding 10px 20px
    &:hover
      background darken($bg1, 40%)

#description
  padding 10px
  color #999
  text-align center