$bg1 = #3AABEA

html
body
  padding 0
  margin 0
  font-family "Varela Round", Helvetica, Arial, sans-serif
  font-size 16px
  background #fafafa

#head
  background $bg1
  padding 2em 0 0
  .logo
    color #fff
    font-family "Varela Round", Helvetica, Arial, sans-serif
    font-size 1.6em


#intro
  background $bg1
  text-align center
  padding 3em 0

  div
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    padding 1.5em 0
    color #f1f1f1
    font-size 1.4em
    font-weight 300

  input[type=text]
    border 0
    border-radius 4px
    margin-right 5px
    font-size 24pt
    padding 0.5em

  input[type=submit]
    background darken($bg1, 20%)
    border 0
    color #fff
    font-size 24pt
    border-radius 4px
    padding 0.5em
    margin-top -10px

#description
  padding 10px
  color #999
  text-align center