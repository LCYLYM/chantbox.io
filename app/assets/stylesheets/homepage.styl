#homepage 

  h1
    padding-bottom 1.5em

  #head
    background lighten(#412A3F, 20%)
    padding 3% 0
    text-align center

  #intro
    background lighten(#412A3F, 20%)
    text-align center
    height 60%
    color #fff

    h1
      padding 1.5em 0
      color #f1f1f1
      font-size 3em
      font-weight 300
      font-family 'Lato'

    input[type=text]
      border 0
      font-size 16pt
      padding 10px 10px
      margin-right 10px
      border-radius 5px

    input[type=submit]
      background #3596FF
      border-radius 5px
      border 0
      color #fff
      font-size 14pt
      padding 12px 20px
      &:hover
        background lighten(#3596FF, 10%)

  #description
    padding 10px
    color #999
    text-align center

  .container
    a.sign_in_twitter
      margin-top 100px
      font-size 1.3em
      padding 10px 20px
