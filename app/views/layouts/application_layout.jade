doctype html
html
  head
    title= title
    != stylesheetLinkTag('application', 'https://fonts.googleapis.com/css?family=Lato:300,400')
    script(src='/socket.io/socket.io.js', type='text/javascript')
    != javascriptIncludeTag('https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js')
    != javascriptIncludeTag('angular.chantbox.app', 'angular.chantbox.services.socket', 'angular.chantbox.services.chatter', 'angular.chantbox.controllers.room')

  body(ng-app='chantbox', id=page)
    #head_login
      if (user)
        a.sign_in_twitter(href='/auth/logout') !{avatar(user, 'small')} logout
      if (!user)
        - var twitter = '/auth/twitter' + (room ? '?room='+room : '')
        a.sign_in_twitter(href=twitter) Login with Twitter
    != body
